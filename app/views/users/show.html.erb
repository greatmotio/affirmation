<style>
	body {
		background-color: #1A6315;
	}

	.space {
		font-size: 18px;
		color: #ffff00;
		padding-top: 60px;
		margin-bottom: -20px;
		text-align: left;
		display:inline-block;
		/*text-shadow: 1px 1px 0 #ffffff,
             		-1px 1px 0 #ffffff,
             		1px -1px 0 #ffffff,
             		-1px -1px 0 #ffffff;*/
	}

	.border {
		margin-bottom: 10px;
		border: 5px #ffffff solid;
	}

</style>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<ul>
				<div>
					<% @user.posts.each do |post| %>
						<li class="space"><%= simple_format post.content %></li>
						<li>
							<% if post.image? %>
								<%= image_tag post.image.url, class: 'border' %>
							<% end %>
						</li>
					<% end %>
				</div>
			</ul>
			<%= link_to '戻る', post_path(current_user), class: 'back' %>
			<div class="box"></div>
		</div>
	</div>
</div>